{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "secretsmanager:GetSecretValue",
        "secretsmanager:DescribeSecret"
      ],
      "Resource": [
        "arn:aws:secretsmanager:{{ aws_region }}:{{ aws_account_id }}:secret:{{ secrets_prefix }}/*"
      ]
    }
  ]
}
